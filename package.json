{
  "name": "zomnifer",
  "version": "0.0.1",
  "description": "electron RS somnifero inspiration",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass --output-style=compressed src/sass/ -o dist/css/",
    "sass:watch": "npm run sass -- -w",
    "js:front": "browserify src/js/app.js -o dist/js/app.js && uglifyjs -v --source-map dist/js/app.min.js.map dist/js/app.js -o dist/js/app.min.js",
    "js:front:watch": "onchange src/js/**/*.js -v -- npm run js:front",
    "copy:fonts": "copyfiles -f src/fonts/*.{ttf,otf} dist/fonts/",
    "copy:images": "copyfiles -f src/images/*.{jpg,png} dist/images/",
    "copy:js:electron": "copyfiles -f src/index.js dist/",
    "copy:js:electron:watch": "onchange src/index.js -v -- npm run copy:js:electron",
    "copy:html": "copyfiles -f src/index.html dist/",
    "copy:html:watch": "onchange src/index.html -v -- npm run copy:html",
    "copy": "npm run copy:fonts && npm run copy:images && npm run copy:js:electron && npm run copy:html",
    "clean": "rimraf dist/",
    "postclean": "mkdirp dist/images dist/css dist/fonts dist/js",
    "build": "npm run sass && npm run js:front && npm run copy",
    "prebuild": "npm run clean",
    "postbuild": "sloc --format cli-table --keys total,source,comment ./src/",
    "electron": "electron dist/",
    "dev": "npm-run-all --parallel sass:watch js:front:watch copy:js:electron:watch copy:html:watch electron",
    "predev": "npm run build",
    "start": "npm run dev "
  },
  "author": "Benjamin Caradeuc <benjamin@caradeuc.info>",
  "license": "MIT",
  "dependencies": {
    "electron": "^1.4.15",
    "menubar": "^5.2.0"
  },
  "devDependencies": {
    "browserify": "^14.0.0",
    "copyfiles": "^1.2.0",
    "electron-packager": "^8.5.1",
    "mkdirp": "^0.5.1",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1",
    "rimraf": "^2.5.4",
    "sloc": "^0.2.0",
    "uglifyjs": "^2.4.10"
  }
}
